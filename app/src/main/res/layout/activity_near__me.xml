<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Near_Me">

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/ll1_near"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_count_near"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="60sp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2_near"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ll1_near"
        >

        <TextView
            android:id="@+id/textView_coordinate_near"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40sp"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:layout_centerInParent="true"
        android:id="@+id/button_refresh_near"
        android:layout_above="@id/ll1_near"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="refresh" />
</RelativeLayout>