<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    >

<LinearLayout
    android:id="@+id/ll0_info_dash"
    android:layout_below="@id/ll1_details_dash"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_dash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        />

    <TextView
        android:id="@+id/textView_coordinate_dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/container_dash"
        android:text="@string/something_s_not_right_restart_app"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/textView_safeornot_dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/container_dash"
        android:text="@string/click_near_me_to_refresh"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#228B22"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/ll1_details_dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e53935">

        <!--<ImageView
            android:layout_margin="8dp"
            android:background="@drawable/custom_round_bg"
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_person_pin_black_24dp" />-->

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/ll1_ll1_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_name_dash"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="Name"

                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_phone_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="Email"

                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_type_dash"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="Type"

                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#EEEEEE"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ll0_info_dash">


        <LinearLayout
            android:layout_margin="8dp"

            android:id="@+id/ll2_set1_dash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:drawableTop="@drawable/ic_near_me_black_24dp"
                android:drawableTint="#ffffff"
                android:padding="12dp"
                android:text="Near me"
                android:textColor="#ffffff"
                android:layout_margin="4dp"
                android:id="@+id/imageButton1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_1" />

            <Button
                android:drawableTop="@drawable/ic_edit_location_black_24dp"
                android:drawableTint="#ffffff"
                android:padding="12dp"
                android:text="Update location"
                android:textColor="#ffffff"

                android:layout_margin="4dp"
                android:id="@+id/imageButton2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_1" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_below="@id/ll2_set1_dash"
            android:id="@+id/ll3_set2_dash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:drawableTop="@drawable/ic_settings_black_24dp"
                android:drawableTint="#ffffff"
                android:padding="12dp"
                android:text="Settings"
                android:textColor="#ffffff"


                android:layout_margin="4dp"
                android:id="@+id/imageButton3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_1" />

            <Button
                android:drawableTop="@drawable/ic_business_center_black_24dp"
                android:drawableTint="#ffffff"
                android:padding="12dp"
                android:text="About us"
                android:textColor="#ffffff"


                android:layout_margin="4dp"
                android:id="@+id/imageButton4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_1" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A social distancing platform"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginBottom="68dp"
        />


</RelativeLayout>